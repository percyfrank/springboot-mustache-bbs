{{>layouts/header}}
<form action="/hospitals" method="get">
    <div class="mb-3">
        <label class="form-label" name="keyword">지역명</label>
        {{#keyword}}
            <input type="text" name = "keyword" value="{{keyword}}" />
        {{/keyword}}
        {{^keyword}}
            <input type="text" name = "keyword"/>
        {{/keyword}}
        <button type="submit" class="btn btn-primary">조회</button>
    </div>
</form>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">병원명</th>
        <th scope="col">주소</th>
        <th scope="col">전화번호</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{fullAddress}}</td>
            <td>{{phone}}</td>
        </tr>
    {{/hospitals}}
    </tbody>
</table>
<ul class="pagination justify-content-center">
    {{#keyword}}
    <li class="page-item"><a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next</a>
    </li>
    {{/keyword}}
    {{^keyword}}
    <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a>
    </li>
    {{/keyword}}
</ul>
{{>layouts/footer}}